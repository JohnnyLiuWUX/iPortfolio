@{
    ViewBag.Title = "Modify AuditItem";

    IPortfolio.Model.AuditItemModel item = ViewBag.AuditItemModel;
}

<ol class="breadcrumb mtFixed">
    <li><a href="~/">Home</a></li>
    <li><a href="@Url.Action("Index","AuditItem")">AuditItem</a></li>
    <li class="active">Modify AuditItem</li>
</ol>

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-modal-window"></span>
            <span>Modify AuditItem</span>
        </div>
        <div class="panel-body">
            <form id="form1">
				<input type="hidden" name="ItemID" value="@item.ItemID">

				<div class="form-group">
					<label>AuditID</label>
					<input type="text" class="form-control" name="AuditID" placeholder="Please input AuditID" value="@item.AuditID">
				</div>
				<div class="form-group">
					<label>AuditRuleID</label>
					<input type="text" class="form-control" name="AuditRuleID" placeholder="Please input AuditRuleID" value="@item.AuditRuleID">
				</div>
				<div class="form-group">
					<label>Status</label>
					<input type="text" class="form-control" name="Status" placeholder="Please input Status" value="@item.Status">
				</div>
				<div class="form-group">
					<label>Evidence</label>
					<input type="text" class="form-control" name="Evidence" placeholder="Please input Evidence" value="@item.Evidence">
				</div>
				<div class="form-group">
					<label>Comments</label>
					<input type="text" class="form-control" name="Comments" placeholder="Please input Comments" value="@item.Comments">
				</div>

				<a href="@Url.Action("Modify", "AuditItem", new { itemID = @item.ItemID })" class="btn btn-default">
                    <span class="glyphicon glyphicon-refresh"></span>
                    <span>Refresh</span>
                </a>
                <button type="button" class="btn btn-primary" onclick="SubmitFormAsync('@Url.Action("Update", "AuditItem")', 'form1')">Submit</button>
				<a href="@Url.Action("Index", "AuditItem")" class="btn btn-default">
                    <span class="glyphicon glyphicon-share"></span>
                    <span>Back</span>
                </a>
            </form>
        </div>
    </div>
</div>