@{
    ViewBag.Title = "Modify Status";

    IPortfolio.Model.StatusModel item = ViewBag.StatusModel;
}

<ol class="breadcrumb mtFixed">
    <li><a href="~/">Home</a></li>
    <li><a href="@Url.Action("Index","Status")">Status</a></li>
    <li class="active">Modify Status</li>
</ol>

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-modal-window"></span>
            <span>Modify Status</span>
        </div>
        <div class="panel-body">
            <form id="form1">

				<div class="form-group">
					<label>Status <span class="label label-danger">*</span></label>
					<select class="form-control" name="Status">
						<option value="0"> == Select == </option>
					</select>
				</div>
				<div class="form-group">
					<label>StatusGroup</label>
					<input type="text" class="form-control" name="StatusGroup" placeholder="Please input StatusGroup" value="@item.StatusGroup">
				</div>
				<div class="form-group">
					<label>StatusDesc</label>
					<input type="text" class="form-control" name="StatusDesc" placeholder="Please input StatusDesc" value="@item.StatusDesc">
				</div>

				<a href="@Url.Action("Modify", "Status", new { status = @item.Status })" class="btn btn-default">
                    <span class="glyphicon glyphicon-refresh"></span>
                    <span>Refresh</span>
                </a>
                <button type="button" class="btn btn-primary" onclick="SubmitFormAsync('@Url.Action("Update", "Status")', 'form1')">Submit</button>
				<a href="@Url.Action("Index", "Status")" class="btn btn-default">
                    <span class="glyphicon glyphicon-share"></span>
                    <span>Back</span>
                </a>
            </form>
        </div>
    </div>
</div>