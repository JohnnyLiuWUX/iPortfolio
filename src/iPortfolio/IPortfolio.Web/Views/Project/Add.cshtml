							<label>InternalBudget</label>
							<input type="text" class="form-control" name="InternalBudget" placeholder="Please input InternalBudget">
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>ExternalBudget</label>
							<input type="text" class="form-control" name="ExternalBudget" placeholder="Please input ExternalBudget">
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>ROI</label>
							<input type="text" class="form-control" name="ROI" placeholder="Please input ROI">
						</div>
					</div>

					<div class="col-md-3">
						<div class="form-group">
							<label>ActualTime</label>
							<input type="text" class="form-control" name="ActualTime" placeholder="Please input ActualTime">
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>ActualInternalCost</label>
							<input type="text" class="form-control" name="ActualInternalCost" placeholder="Please input ActualInternalCost">
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>ActualExternalCost</label>
							<input type="text" class="form-control" name="ActualExternalCost" placeholder="Please input ActualExternalCost">
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>ActualSaving</label>
							<input type="text" class="form-control" name="ActualSaving" placeholder="Please input ActualSaving">
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>Type</label>
							<select class="form-control" name="Type">
								<option value="0">== Select ==</option>
								@if (projectPropertyList != null)
								{
									foreach (var item in projectPropertyList)
									{
										if (item.PropertyType.ToLower() == "type")
										{
											<option vlaue="@item.PropertyKey">@item.PropertyValue</option>
										}
									}
								}
							</select>
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>Source</label>
							<select class="form-control" name="Source">
								<option value="0">== Select ==</option>
