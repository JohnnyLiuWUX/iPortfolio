					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>IsMajor</label>
							<select class="form-control" name="IsMajor">
								<option value="0">== Select ==</option>
								@if (projectPropertyList != null)
								{
									foreach (var item in projectPropertyList)
									{
										if (item.PropertyType.ToLower() == "source")
										{
											<option vlaue="@item.PropertyKey">@item.PropertyValue</option>
										}
									}
								}
							</select>
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>Phase</label>
							<select class="form-control" name="Phase">
								<option value="0">== Select ==</option>
								@if (projectPropertyList != null)
								{
									foreach (var item in projectPropertyList)
									{
										if (item.PropertyType.ToLower() == "phase")
										{
											<option vlaue="@item.PropertyKey">@item.PropertyValue</option>
										}
									}
								}
							</select>
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label>Status</label>
							<select class="form-control" name="Status">
								<option value="0">== Select ==</option>
								@*@if (projectPropertyList != null)
								{
									foreach (var item in projectPropertyList)
									{
										if (item.PropertyType.ToLower() == "status")
										{
											<option vlaue="@item.PropertyKey">@item.PropertyValue</option>
										}
									}
								}*@
							</select>
						</div>
					</div>

					<div class="col-md-12">
						<div class="form-group">
							<label>Description</label>
							<textarea class="form-control" name="Description" rows="3"></textarea>
						</div>
					</div>
				</div>	
			</form>
        </div>
		<div class="panel-footer">
			<button type="button" class="btn btn-primary" onclick="SubmitFormAsync('@Url.Action("Insert", "Project")', 'form1')">Submit</button>
			<a href="@Url.Action("MyProject", "Project")" class="btn btn-default">
				<span class="glyphicon glyphicon-share"></span>
				<span>Back</span>
			</a>
		</div>
    </div>
</div>
