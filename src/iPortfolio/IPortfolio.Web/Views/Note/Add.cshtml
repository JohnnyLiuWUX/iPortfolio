@{
    ViewBag.Title = "Note Add";
}

<ol class="breadcrumb mtFixed">
    <li><a href="~/">Home</a></li>
    <li><a href="@Url.Action("Index","Note")">Note</a></li>
    <li class="active">Note Add</li>
</ol>

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-modal-window"></span>
            <span>Add Note</span>
        </div>
        <div class="panel-body">
            <form id="form1">
				<div class="form-group">
					<label>ProjectID</label>
					<input type="text" class="form-control" name="ProjectID" placeholder="Please input ProjectID">
				</div>
				<div class="form-group">
					<label>TaskID</label>
					<input type="text" class="form-control" name="TaskID" placeholder="Please input TaskID">
				</div>
				<div class="form-group">
					<label>Note</label>
					<input type="text" class="form-control" name="Note" placeholder="Please input Note">
				</div>
				<div class="form-group">
					<label>CreatedBy</label>
					<input type="text" class="form-control" name="CreatedBy" placeholder="Please input CreatedBy">
				</div>
				<div class="form-group">
					<label>CreatedTime</label>
					<input type="text" class="form-control" name="CreatedTime" placeholder="Please input CreatedTime">
				</div>

				<a href="@Url.Action("Add", "Note")" class="btn btn-default">
                    <span class="glyphicon glyphicon-refresh"></span>
                    <span>Refresh</span>
                </a>
                <button type="button" class="btn btn-primary" onclick="SubmitFormAsync('@Url.Action("Insert", "Note")', 'form1')">Submit</button>
                <a href="@Url.Action("Index", "Note")" class="btn btn-default">
                    <span class="glyphicon glyphicon-share"></span>
                    <span>Back</span>
                </a>
            </form>
        </div>
    </div>
</div>
